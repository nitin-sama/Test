{% if block.settings.logo %}
  {% style %}
    .footer__logo a {
      height: {{ block.settings.desktop_logo_height }}px;
    }
  {% endstyle %}
  {%- assign footer_logo_size = block.settings.desktop_logo_height | prepend: 'x' -%}
  <div class="footer__logo">
    <a href="{{ routes.root_url }}">
      <img src="https://cdn.shopify.com/s/files/1/0399/4343/8499/files/footer__logo.png?v=1650646496" alt="Giant Sports Cards" loading="lazy" width="121" height="120">
    </a>
  </div>
{% endif %}
