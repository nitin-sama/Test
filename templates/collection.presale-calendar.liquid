{% section 'presale-collection-header' %}

<div id="CollectionAjaxResult" class="collection-content presale-wrapper">
  <div id="CollectionAjaxContent">
    <div class="page-width">
      <div class="grid">
        <div class="grid__item medium-up--one-fifth grid__item--sidebar">
          {% section 'collection-sidebar' %}
        </div>
        <div class="grid__item medium-up--four-fifths grid__item--content">
          {% section 'collection-promotions' %}
          <div class="collection-grid__wrapper">
            {% section 'presale-template' %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .presale-wrapper .grid__item.medium-up--one-fifth.grid__item--sidebar {
    display: none;
}

.presale-wrapper .grid__item.medium-up--four-fifths.grid__item--content {
    width: 100%;
}
</style>